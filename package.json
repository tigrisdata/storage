{
  "name": "@tigris/monorepo",
  "version": "0.0.1",
  "description": "Tigris monorepo for storage SDK",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/storage",
    "packages/iam",
    "packages/keyv-tigris",
    "packages/react"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:storage": "npm run build --workspace=@tigrisdata/storage",
    "build:iam": "npm run build --workspace=@tigrisdata/iam",
    "build:keyv-tigris": "npm run build --workspace=@tigrisdata/keyv-tigris",
    "build:react": "npm run build --workspace=@tigrisdata/react",
    "dev": "npm run dev --workspaces",
    "publint": "npm run publint --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "commit": "cz",
    "release": "./scripts/release.sh",
    "release:dry-run": "./scripts/release.sh --dry-run",
    "prepare": "husky install",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules/.cache"
  },
  "keywords": [
    "object",
    "storage",
    "tigris",
    "blob",
    "ai"
  ],
  "author": "Tigris Data",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigrisdata/storage.git"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-empty": [
        2,
        "never"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "eslint": "^10.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "publint": "^0.3.17",
    "semantic-release": "^25.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.15"
  }
}
